<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:padding="5dp"
    android:stretchColumns="2"
android:background="#9E00BCD4"
tools:context="Fragment.MoviesFragment">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="100dp"
    android:text="Movies"
    android:textAlignment="center"
    android:textColor="@android:color/background_light"
    android:textSize="30sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:layout_marginTop="50dp"
        android:gravity="start">

        <ImageView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:src="@drawable/amazon" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:text="Amazon Adventure"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#F2112233" />
    </TableRow>

    <TableRow
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:gravity="start">

        <ImageView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:src="@drawable/jumanji" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:text="Jumanji"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#F2112233" />
    </TableRow>

    <TableRow
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:gravity="start">

        <ImageView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:src="@drawable/dora" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:text="Dora and lost city of gold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#F2112233" />
    </TableRow>

    <TableRow
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:gravity="start">

        <ImageView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:src="@drawable/horrypotter" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:text="Horry Potter"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#F2112233" />
    </TableRow>

    <TableRow
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:gravity="start">

        <ImageView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:src="@drawable/tintin" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:text="the adventure of tintin"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#F2112233" />
    </TableRow>

    <TableRow
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:gravity="start">

        <ImageView
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:src="@drawable/taina" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="30dp"
            android:text="Taina the adventure continue"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#F2112233" />
    </TableRow>

</TableLayout>